{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/ui/input-otp.jsx", "app/layout.jsx", "stackbit.config.js", "components/Navbar.jsx", "next.config.js", "lib/sendEmail.ts", "lib/authOptions.js", "app/api/auth/[...nextauth]/route.js", "app/api/assignments/[assignmentId]/submit/route.js"],
  "exclude": ["node_modules"]
}
